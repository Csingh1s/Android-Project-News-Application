<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:autoLink="all"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/imageViewnews1"
        android:layout_alignLeft="@+id/imageViewnews1"
        android:layout_alignStart="@+id/imageViewnews1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Titlebar1"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageViewnews1"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Titlebar1"
        android:layout_alignLeft="@+id/Titlebar1"
        android:layout_alignStart="@+id/Titlebar1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Descriptionlabel1"
        android:textColor="?android:attr/panelColorBackground"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="19dp"
        android:layout_alignTop="@+id/imageViewnews1"
        android:layout_toRightOf="@+id/imageViewnews1"
        android:layout_toEndOf="@+id/imageViewnews1" />

</RelativeLayout>